echo -e "${B}Choose an option to change ChatGPT's Tone${Off}\n"
echo -e "${G}1. Default ${Off}"
echo -e "${Cyan}2. Authoritative"
echo "3. Clinical"
echo "4. Concise"
echo "5. Cold"
echo "6. Confident"
echo "7. Cynical"
echo "8. Emotional"
